@{
    ViewData["Title"] = "Grading Guide";
}

<div class="container guide-container">
    <div class="text-center mb-4">
        <h2 id="guide-title">Our Grading Standards</h2>
        <p class="text-muted">Use this guide to correctly categorize inventory items.</p>
    </div>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Category</th>
                <th>Grade</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><span class="badge badge-new px-3 py-2">New</span></td>
                <td><strong>Mint condition</strong></td>
                <td>The product is in perfect condition. No scratches, tears, or fading. White pages. Spine is flat.
                </td>
            </tr>
            <tr>
                <td><span class="badge badge-used px-3 py-2">Used</span></td>
                <td><strong>Fine to Near mint</strong></td>
                <td>Minor wear allowed. Small stress lines on spine. Pages may be off-white. No major tears.</td>
            </tr>
            <tr>
                <td><span class="badge badge-damaged px-3 py-2">Damaged</span></td>
                <td><strong>Poor to Very good</strong></td>
                <td>There is significant wear. Creases, tears, water damage, or detached cover. Readable but flawed.
                </td>
            </tr>
        </tbody>
    </table>

    <div class="alert alert-warning mt-4">
        <strong>Note:</strong> If a comic falls between two categories, always choose the lower condition
        to avoid customer complaints.
    </div>

    <div class="text-center mt-4">
        <button onclick="window.close()" class="btn btn-outline-dark btn-lg" id="btn-close-guide">
            Close Guide and Return
        </button>
    </div>
</div>