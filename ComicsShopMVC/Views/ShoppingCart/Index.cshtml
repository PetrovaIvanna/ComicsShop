@model ComicsShopMVC.Models.ShoppingCart

<div class="container mt-4">
    <h2>Your Shopping Cart</h2>
    <div class="card shadow-sm mt-3">
        <div class="card-body p-0">
            <table class="table table-bordered table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Amount</th>
                        <th>Comic</th>
                        <th class="text-end">Price</th>
                        <th class="text-end">Subtotal</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model.ShoppingCartItems)
                    {
                        <tr>
                            <td class="text-center align-middle">@line.Amount</td>
                            <td class="align-middle">@line.ComicBook.Title</td>
                            <td class="text-end align-middle">@line.ComicBook.Price.ToString("c")</td>
                            <td class="text-end align-middle">
                                @((line.Amount * line.ComicBook.Price).ToString("c"))
                            </td>
                            <td class="text-center align-middle">
                                <a class="btn btn-danger btn-sm" 
                                   asp-controller="ShoppingCart" 
                                   asp-action="RemoveFromShoppingCart" 
                                   asp-route-comicId="@line.ComicBook.Id">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Total:</td>
                        <td class="text-end fw-bold text-success">
                            @Model.GetShoppingCartTotal().ToString("c")
                        </td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    
    <div class="text-center mt-4">
        <a class="btn btn-primary btn-lg px-5" asp-controller="Order" asp-action="Checkout">Check out now!</a>
    </div>
</div>