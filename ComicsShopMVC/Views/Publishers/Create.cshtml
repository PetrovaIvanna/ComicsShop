@model ComicsShopMVC.Models.Publisher

@{
    ViewData["Title"] = "Add New Publisher";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Add New Publisher</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" id="pub-name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Country" class="form-label fw-bold"></label>
                    <input asp-for="Country" class="form-control" id="pub-country" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FoundationYear" class="form-label fw-bold"></label>
                    <input asp-for="FoundationYear" class="form-control" id="pub-year" />
                    <span asp-validation-for="FoundationYear" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-success px-5" id="btn-save-pub">Add New Publisher</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}