@model IEnumerable<ComicsShopMVC.Models.Publisher>

@{
    ViewData["Title"] = "Publishers";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2>Publishers List</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            &larr; Back to Homepage
        </a>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3 bg-light p-3 rounded">
        <form asp-action="Index" method="get" class="d-flex w-100">
            <input type="number" name="searchId" class="form-control me-2" placeholder="Search by Publisher ID">
            <button type="submit" class="btn btn-outline-primary">Search</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Reset</a>
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3 clearfix">
        <a asp-action="Create" class="btn btn-primary float-start">Add new Publisher</a>

        <form asp-action="DeleteAll" method="post" class="d-inline float-end"
            onsubmit="return confirm('Are you sure you want to delete ALL publishers? This will also delete linked comics!');">
            <button type="submit" class="btn btn-danger">Delete all Publishers</button>
        </form>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Country)</th>
                        <th>@Html.DisplayNameFor(model => model.FoundationYear)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                                <td>@Html.DisplayFor(modelItem => item.FoundationYear)</td>
                                <td class="text-center" style="width: 200px;">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Delete this publisher?');">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No publishers found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>