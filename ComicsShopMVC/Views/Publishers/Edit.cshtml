@model ComicsShopMVC.Models.Publisher

@{
    ViewData["Title"] = "Edit Publisher";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">Edit Publisher Details</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" id="edit-pub-name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Country" class="form-label fw-bold"></label>
                    <input asp-for="Country" class="form-control" id="edit-pub-country" />
                    <span asp-validation-for="Country" class="text-danger" id="error-country"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FoundationYear" class="form-label fw-bold"></label>
                    <input asp-for="FoundationYear" class="form-control" id="edit-pub-year" />
                    <span asp-validation-for="FoundationYear" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary px-5" id="btn-save-changes">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}